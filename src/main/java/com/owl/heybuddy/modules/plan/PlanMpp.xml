	<insert id="insert">
		INSERT INTO hybdPlan (
		hyplName
		,hyplDefaultNy
		,hyplDelNy
		,hyplDate
		,hyplDesc
		,hyplMemberName
		)
		VALUES (
		#{hyplName}
		,#{hyplDefaultNy}
		,#{hyplDelNy}
		,#{hyplDate}
		,#{hyplDesc}
		,#{hyplMemberName}
		)
		<selectKey resultType="String" keyProperty="hyplSeq" order="AFTER">
			SELECT last_insert_id()
		</selectKey>
	</insert>


	<select id="selectOne" resultMap="resultMapObj">
		SELECT
		hyplSeq
		,a.hyplName
		,a.hyplDefaultNy
		,a.hyplName
		,a.hyplDate
		,a.hyplDesc
		,a.hyplMemberName
		FROM
		hybdPlan a
		WHERE
		1 = 1
	</select>


	<update id="update">
		UPDATE
		hyplPlan  <!-- 진짜 중요한게 테이블 이름틀리면 505 Error 불변임 -->
		SET
		hyplName = #{hyplName} <!-- 여기다 여러개 넣으면 여러개 수정 함께 가능 -->
		,hyplNameEng = #{hyplNameEng}
		,hyplGenderCd = #{hyplGenderCd}
		,hyplEmailConsentNy = #{hyplEmailConsentNy}
		,hyplId = #{hyplId}
		,hyplPassword = #{hyplPassword} <!-- 여기다 여러개 넣으면 여러개 수정 함께 가능 -->
		WHERE
		1 = 1
	</update>


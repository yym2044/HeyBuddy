	<!-- 그냥 plan 작동하기 위해서 selectList는 필수 넣어놔야되는거같음 없으면 애러-->
	<select id="selectList" resultMap="resultMapObj">
		SELECT
			hyplName
			,hyplDefaultNy
			,hyplDelNy
			,hyplDate
			,hyplDesc
			,hyplMemberName
		FROM
			 hybdPlan
		WHERE 
			1 = 1
	</select>

	<select id="selectListSpace" resultMap="resultMapObj">
		SELECT
			a.hyspSeq
			,a.hyspName
		FROM 
			hybdSpace AS a
		WHERE	1 = 1
	</select>

